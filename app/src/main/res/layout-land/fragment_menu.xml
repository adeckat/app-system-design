<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pearl"
    android:orientation="vertical"
    tools:context=".fragment.MenuFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/btn_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/phone_main_button"
            android:scaleType="fitCenter"
            android:src="@drawable/profile" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/btn_bmi"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/phone_main_button"
            android:scaleType="fitCenter"
            android:src="@drawable/bmi" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/btn_activity"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/phone_main_button"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/calendar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/btn_goal"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/phone_main_button"
            android:scaleType="fitCenter"
            android:src="@drawable/goal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/btn_hike"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/phone_main_button"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/hiking" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/btn_weather"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/phone_main_button"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/weather" />
    </LinearLayout>

</LinearLayout>

